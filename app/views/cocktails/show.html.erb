<% if @cocktail.photo.attached? %>
  <div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>');">
    <div class="container">
      <h1 class="text-center"><%= @cocktail.name %></h1>
    </div>
  </div>
<% else %>
  <div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/featured/?cocktail);">
    <div class="container">
      <h1 class="text-center"><%= @cocktail.name %></h1>
    </div>
  </div>
<% end %>


<div class="container card p-5">
  <div class="row">
    <h2>Ingredients:</h2>
  </div>
      <% @cocktail.doses.each do |dose| %>
      <div class="row">
        <p><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to '(delete)', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
      <% end %>
  <div class="row">
    <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
  </div>
</div>
