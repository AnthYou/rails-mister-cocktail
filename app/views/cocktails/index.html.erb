<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1583367455075-9b4f4c6735bb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2689&q=80);">
  <div class="container">
    <h1>Mister Cucktail brings <strong>alcohol</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to make awesome cocktails.</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <h1>List of cocktails</h1>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>');">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail);">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
